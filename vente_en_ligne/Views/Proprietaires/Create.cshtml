@model vente_en_ligne.Models.Proprietaire
<link href="~/css/styleprioprioauth.css" rel="stylesheet" />
<script src="~/js/adminauth.js"></script>
@{
    Layout = null;
}

<div class="container">
    <div class="forms-container">
        <div class="signin-signup">
            <form asp-action="Create" method="post" class="sign-in-form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h2 class="title">User Sign up </h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="INterID" placeholder="CIN OR NumPasseport" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="Prenom" placeholder="Firstname" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="Nom" placeholder="LastName" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="Email" placeholder="Email" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="password" placeholder="Password" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="NomEntreprise" placeholder="CompanyName" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="AdresseEntreprise" placeholder="CompanyAddress" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="Tele" placeholder="Phone" />
                </div>
                <input type="submit" value="Create" class="btn solid" />
            </form>
        </div>
    </div>

    <!---------- Left Side Of Sign In Page --------->
    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Back to Authentication :</h3>
                <p>
                    Click the Login to go back to the Login page.
                </p>
                <a href="@Url.Action("Index", "Proprietaires")" class="btn transparent" style="font-size: 20px; padding: 10px;">
                    Login
                </a>
            </div>
            <img src="/img/profil.png" class="image" alt="2nd Pic" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>One of us ?</h3>
                <p>
                    Click the Sign In to see the effect
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    LOGIN
                </button>
            </div>
            <img src="/img/profil.png" class="image" alt="1 Pic" />
        </div>
    </div>
</div>
